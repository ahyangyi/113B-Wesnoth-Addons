# Swamp Corruption

	#define WORKER_OPTION_CORRUPTION_SWAMP
		[option]
			message= _ {MENU_IMG_TXT2 "terrain/swamp/water-tile.png" _"@Withering Corruption" _"`Earns: 2g"}
			{YY_SHOW_IF ("") "Gg,Gs,Ggf"}
			[command]
				{VARIABLE finished yes}
				{VARIABLE_OP unit.moves value 0}
				{ADD_GOLD_SIDE $side_number 2}
				{PLAY_SOUND ("mermen-hit.wav")}
				{SET_TERRAIN $x1 $y1 "Ss"}
				[unstore_unit]
					variable=unit
					text=_ 2
					red,green,blue=204,204,51
				[/unstore_unit]
			[/command]
		[/option]
	#enddef

