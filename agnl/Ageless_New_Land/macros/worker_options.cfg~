# ----------------------------------------------
# FARMLAND

# Cash Crop

	#define WORKER_OPTION_CASH_CROP
		[option]
			message= _ {MENU_IMG_TXT2 "terrain/flat/grass-r8.png" _"@Convert to Grassland" _"`Cost: 0g"}
            {YY_SHOW_IF ("") "Re"}
			[command]
				{COMPLETE_ACTION 0}
				{SET_TERRAIN $x1 $y1 "Gg"}
				{PLAY_SOUND ("dagger-swish.wav")}
			[/command]
		[/option]
	#enddef

