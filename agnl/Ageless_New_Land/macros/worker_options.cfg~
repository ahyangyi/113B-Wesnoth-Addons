#define WORKER_OPTIONS_BEGIN TYPES ID
    [set_menu_item]
        id={ID}
        description=_ "Get to Work!"
        [show_if]
            [have_unit]
                side=$side_number
                x,y=$x1,$y1
                type={TYPES}
                [not]
                    [filter_wml]
                        moves=0
                    [/filter_wml]
                [/not]
            [/have_unit]
        [/show_if]
        [command]
            [store_side]
                side=$side_number
                variable=worker
            [/store_side]

            [store_unit]
                [filter]
                    x=$x1
                    y=$y1
                [/filter]
                variable=unit
            [/store_unit]

            {VARIABLE finished no}
            [while]
                {CONDITION finished equals no}
                [do]
                    [message]
                        speaker=unit
                        message= _ "What shall I do my liege?
                                                                                    "

                        [option]
                            message= _ "Nothing"
                            [command]
                                {VARIABLE finished yes}
                            [/command]
                        [/option]
#enddef

#define WORKER_OPTIONS_END
                    [/message]
                [/do]
            [/while]
        [/command]
    [/set_menu_item]
#enddef

